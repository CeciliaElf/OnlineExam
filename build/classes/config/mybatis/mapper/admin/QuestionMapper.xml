<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cecilia.programmer.dao.admin.QuestionDao">
    <!--试题插入操作-->
    <insert id="add" parameterType="com.cecilia.programmer.entity.admin.Question">
        insert into question(id,questionType,title,score,attrA,attrB,attrC,attrD,answer,createTime) values(null,#{questionType},#{title},#{score},#{attrA},#{attrB},#{attrC},#{attrD},#{answer},#{createTime}) 
    </insert>
    <!--试题更新操作-->
    <update id="edit" parameterType="com.cecilia.programmer.entity.admin.Question">
        update question set title=#{title}, score=#{score}, questionType=#{questionType}, attrA=#{attrA}, attrB=#{attrB}, attrC=#{attrC}, attrD=#{attrD},answer=#{answer} where id = #{id} 
    </update>
    <!--试题按题目查询-->
    <select id="findByTitle" parameterType="String" resultType="com.cecilia.programmer.entity.admin.Question">
        select * from question where title = #{value} 
    </select>
    <!--试题搜索，查询-->
    <select id="findList" parameterType="Map" resultType="com.cecilia.programmer.entity.admin.Question">
        select * from question where 1 = 1 
            <if test="title != null">
                and title like '%${title}%' 
            </if>
            <if test="questionType != null">
                and questionType like #{questionType} 
            </if>
            <if test="offset != null and pageSize != null">
            	limit #{offset}, #{pageSize} 
            </if>
    </select>
    <!-- 模糊搜索总条数 -->
    <select id="getTotal" parameterType="Map" resultType="Integer">
        select count(*) from question where 1 = 1 
            <if test="title != null">
                and title like '%${title}%' 
            </if>
            <if test="questionType != null">
                and questionType like #{questionType} 
            </if>
    </select>
    <!-- 根据试题类型获取试题数量 -->
    <select id="getQuestionNumByType" parameterType="Integer" resultType="Integer">
        select count(*) from question where questionType = ${value} 
    </select>
    <!--删除试题讯息-->
    <delete id="delete" parameterType="Long">
        delete from question where id = ${value} 
    </delete>
</mapper>
